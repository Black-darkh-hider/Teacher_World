# Server
PORT=5000
NODE_ENV=development

# Database (SQLite default for dev)
DB_DIALECT=sqlite
DB_STORAGE=./database.db
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=teacher_world

# JWT
JWT_ACCESS_SECRET=replace_with_strong_access_secret
JWT_REFRESH_SECRET=replace_with_strong_refresh_secret
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Email (Nodemailer SMTP example)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=apikey_or_username
SMTP_PASS=secret
SMTP_FROM="TeacherWorld <noreply@teacherworld.com>"

# App
FRONTEND_ORIGIN=http://localhost:3000
OTP_TTL_MINUTES=10
OTP_HASH_SECRET=replace_with_random_secret_for_otp_hash
